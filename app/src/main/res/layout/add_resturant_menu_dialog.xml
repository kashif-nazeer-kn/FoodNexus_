<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_8sdp"
        android:backgroundTint="@color/primaryColor"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/DialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Add new item"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"

                />

            <EditText
                android:id="@+id/DialogEtItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DialogTitle"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="Enter Name"
                android:padding="@dimen/_5sdp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/DialogEtItemRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DialogEtItemName"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="Enter Recipe"
                android:inputType="textCapCharacters"
                android:padding="@dimen/_5sdp"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/DialogEtItemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DialogEtItemRecipe"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit_text"
                android:hint="Enter Price in Rs"
                android:inputType="number"
                android:padding="@dimen/_5sdp"
                android:textColorHint="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/DialogBtnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DialogEtItemPrice"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="@string/add"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:elevation="15dp"
                android:translationZ="8dp"
                app:cornerRadius="12dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/white"
                android:backgroundTint="@android:color/transparent" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>